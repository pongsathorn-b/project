            },
            {
                image: "https://ik.imagekit.io/rmlbayysp/1749561199728-S__46071965_0_ahsJyz6irN.jpg",
                quote: "You're my sunshine on cloudy days",
                date: "Brightening every moment"
            },
            {
                image: "https://ik.imagekit.io/rmlbayysp/1749561225679-S__46071955_0_Jcbv4a0o5l.jpg",
                quote: "Forever grateful for your love",
                date: "A treasure beyond measure"
            },
            {
                image: "https://ik.imagekit.io/rmlbayysp/1749561252576-S__46071974_0_yacbcK5Nd.jpg",
                quote: "With you, I've found my forever",
                date: "Building our future together"
            },
            {
                image: "https://ik.imagekit.io/rmlbayysp/1749561285230-S__46071984_0_I7Z1FNZb1.jpg",
                quote: "You're my favorite person in the whole world",
                date: "My heart belongs to you"
            },
            {
                image: "https://ik.imagekit.io/rmlbayysp/1749561308413-S__46071973_0_6sJzBkNjJ.jpg",
                quote: "Every moment is sweeter with you",
                date: "Creating sweet memories"
            },
            {
                image: "https://ik.imagekit.io/rmlbayysp/1749561334244-S__46071976_0_Wuqbfgijj.jpg",
                quote: "You complete me in every way",
                date: "Two hearts, one love"
            },
            {
                image: "https://ik.imagekit.io/rmlbayysp/1749561352059-S__46071980_0_796iAdkwc.jpg",
                quote: "My love for you grows stronger every day",
                date: "Endless and eternal"
            },
            {
                image: "https://ik.imagekit.io/rmlbayysp/1749561394192-S__46071987_0_-ObQzLRth.jpg",
                quote: "You're my greatest love story",
                date: "Written in the stars"
            }
        ];
        
        let currentMemoryIndex = 0;
        let isPlaying = false;
        let musicPlaying = false;
        let playInterval;
        
        // Initialize the app
        function initApp() {
            loadMemories();
            createFloatingHearts();
            startCountdown();
            
            // Add click sparkle effect
            document.addEventListener('click', createSparkle);
        }
        
        // Load memories into gallery
        function loadMemories() {
            const gallery = document.getElementById('memoryGallery');
            
            memories.forEach((memory, index) => {
                const card = document.createElement('div');
                card.className = 'memory-card';
                card.onclick = () => openModal(index);
                
                card.innerHTML = `
                    <img src="${memory.image}" alt="Memory" class="memory-image" loading="lazy">
                    <div class="memory-quote">"${memory.quote}"</div>
                    <div class="memory-date">${memory.date}</div>
                `;
                
                // Add stagger animation
                card.style.animation = `fadeInUp 0.6s ease-out ${index * 0.1}s both`;
                gallery.appendChild(card);
            });
        }
        
        // Create floating hearts
        function createFloatingHearts() {
            const container = document.getElementById('floatingHearts');
            
            setInterval(() => {
                const heart = document.createElement('div');
                heart.className = 'heart';
                heart.innerHTML = ['💖', '💕', '💝', '💗', '💓'][Math.floor(Math.random() * 5)];
                heart.style.left = Math.random() * 100 + '%';
                heart.style.animationDelay = Math.random() * 2 + 's';
                heart.style.animationDuration = (Math.random() * 3 + 4) + 's';
                
                container.appendChild(heart);
                
                setTimeout(() => {
                    heart.remove();
                }, 7000);
            }, 1000);
        }
        
        // Open modal
        function openModal(index) {
            const modal = document.getElementById('imageModal');
            const modalImage = document.getElementById('modalImage');
            const modalQuote = document.getElementById('modalQuote');
            const modalDate = document.getElementById('modalDate');
            
            const memory = memories[index];
            modalImage.src = memory.image;
            modalQuote.textContent = `"${memory.quote}"`;
            modalDate.textContent = memory.date;
            
            modal.style.display = 'block';
            document.body.style.overflow = 'hidden';
        }
        
        // Close modal
        function closeModal() {
            const modal = document.getElementById('imageModal');
            modal.style.display = 'none';
            document.body.style.overflow = 'auto';
        }
        
        // Play our story mode
        function playOurStory() {
            if (isPlaying) {
                stopStory();
                return;
            }
            
            isPlaying = true;
            currentMemoryIndex = 0;
            
            // Change button text
            event.target.innerHTML = '⏸️ Stop Story';
            event.target.classList.add('playing');
            
            // Start the slideshow
            playStorySlideshow();
        }
        
        function playStorySlideshow() {
            if (!isPlaying || currentMemoryIndex >= memories.length) {
                stopStory();
                return;
            }
            
            openModal(currentMemoryIndex);
            currentMemoryIndex++;
            
            playInterval = setTimeout(() => {
                closeModal();
                setTimeout(playStorySlideshow, 500);
            }, 3000);
        }
        
        function stopStory() {
            isPlaying = false;
            clearTimeout(playInterval);
            closeModal();
            
            const playBtn = document.querySelector('.btn-primary');
            playBtn.innerHTML = '✨ Play Our Story';
            playBtn.classList.remove('playing');
        }
        
        // Reveal secret message
        function revealSecret() {
            const secret = document.getElementById('secretMessage');
            secret.style.display = 'block';
            document.body.style.overflow = 'hidden';
            
            // Add celebration effect
            createCelebration();
        }
        
        function closeSecret() {
            const secret = document.getElementById('secretMessage');
            secret.style.display = 'none';
            document.body.style.overflow = 'auto';
        }
        
        // Toggle music
        function toggleMusic() {
            const music = document.getElementById('backgroundMusic');
            const btn = document.getElementById('musicBtn');
            
            if (musicPlaying) {
                music.pause();
                btn.innerHTML = '🎵';
                btn.classList.remove('playing');
            } else {
                // Note: In a real implementation, you'd use the actual audio file
                // For now, we'll simulate music playing
                btn.innerHTML = '🎶';
                btn.classList.add('playing');
            }
            musicPlaying = !musicPlaying;
        }
        
        // Countdown timer
        function startCountdown() {
            const timer = document.getElementById('countdownTimer');
            
            // Set target date (example: 30 days from now)
            const targetDate = new Date();
            targetDate.setDate(targetDate.getDate() + 30);
            
            function updateCountdown() {
                const now = new Date().getTime();
                const distance = targetDate.getTime() - now;
                
                const days = Math.floor(distance / (1000 * 60 * 60 * 24));
                const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
                
                timer.innerHTML = `${days}d ${hours}h ${minutes}m`;
                
                if (distance < 0) {
                    timer.innerHTML = "It's time! 💕";
                }
            }
            
            updateCountdown();
            setInterval(updateCountdown, 60000);
        }
        
        // Create sparkle effect on click
        function createSparkle(e) {
            const sparkle = document.createElement('div');
            sparkle.className = 'sparkle';
            sparkle.innerHTML = '✨';
            sparkle.style.left = e.clientX + 'px';
            sparkle.style.top = e.clientY + 'px';
            
            document.body.appendChild(sparkle);
            
            setTimeout(() => {
                sparkle.remove();
            }, 1000);
        }
        
        // Create celebration effect
        function createCelebration() {
            const colors = ['💖', '💕', '💝', '💗', '💓', '✨', '🌟', '💫'];
            
            for (let i = 0; i < 20; i++) {
                setTimeout(() => {
                    const celebration = document.createElement('div');
                    celebration.className = 'sparkle';
                    celebration.innerHTML = colors[Math.floor(Math.random() * colors.length)];
                    celebration.style.left = Math.random() * window.innerWidth + 'px';
                    celebration.style.top = Math.random() * window.innerHeight + 'px';
                    celebration.style.fontSize = (Math.random() * 20 + 15) + 'px';
                    
                    document.body.appendChild(celebration);
                    
                    setTimeout(() => {
                        celebration.remove();
                    }, 1000);
                }, i * 100);
            }
        }
        
        // Add fade in animation keyframes
        const style = document.createElement('style');
        style.textContent = `
            @keyframes fadeInUp {
                from {
                    opacity: 0;
                    transform: translateY(30px);
                }
                to {
                    opacity: 1;
                    transform: translateY(0);
                }
            }
        `;
        document.head.appendChild(style);
        
        // Close modal when clicking outside
        window.onclick = function(event) {
            const modal = document.getElementById('imageModal');
            if (event.target === modal) {
                closeModal();
            }
        }
        
        // Initialize app when page loads
        window.addEventListener('load', initApp);
        
        // Handle keyboard shortcuts
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeModal();
                closeSecret();
            }
            if (e.key === ' ') {
                e.preventDefault();
                playOurStory();
            }
        });
    </script>
</body>
